{% extends "layouts/base.html.twig" %}

{% block title %}{{ seller.username }}'s Shop{% endblock %}

{% block content %}
<div class="jumbotron">
    <h1>{{ seller.Full_Name }} <small class="text-muted">(@{{ seller.username }})</small></h1>
    <p>Welcome to my shop.</p>
</div>

<div class="row">
    {% for product in products %}
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            {% if product.image_path %}
            <img src="/{{ product.image_path }}" class="card-img-top" alt="...">
            {% else %}
            <div class="bg-secondary text-white card-img-top p-5 text-center">No Image</div>
            {% endif %}
            
            <div class="card-body">
                <h5 class="card-title">{{ product.title }}</h5>
                <p class="card-text">${{ product.price }}</p>
                <button class="btn btn-success add-to-cart" 
                        data-id="{{ product.id }}" 
                        data-title="{{ product.title }}"
                        data-price="{{ product.price }}">
                    Add to Cart
                </button>
            </div>
        </div>
    </div>
    {% else %}
    <p>No products found.</p>
    {% endfor %}
</div>

{% endblock %}

{% block scripts %}
<script>
$(document).ready(function () {
    $('.add-to-cart').on('click', function () {
        const btn = $(this);
        const productId = btn.data('id');

        btn.prop('disabled', true).text('Adding...');

        $.ajax({
            url: '/cart/add',
            method: 'POST',
            dataType: 'json',
            data: {
                product_id: productId,
                quantity: 1
            },
            success: function (response) {
                if (response.success) {
                    $('#cart-count').text(response.cart_count);
                    btn.text('Added').removeClass('btn-success').addClass('btn-secondary');
                } else {
                    alert(response.message || 'Failed to add to cart');
                    btn.prop('disabled', false).text('Add to Cart');
                }
            },
            error: function () {
                alert('Something went wrong. Please try again.');
                btn.prop('disabled', false).text('Add to Cart');
            }
        });
    });
});
</script>
{% endblock %}
